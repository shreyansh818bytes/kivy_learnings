<MyGrid>

    name_py: name_kv
    email_py: email_kv

    GridLayout:
        cols: 1
        size: root.width-200, root.height-200
        pos: 100, 100

        GridLayout:
            cols: 2

            Label:
                text: "Name: "

            TextInput:
                id: name_kv
                multiline: False

            Label:
                text: "Email: "

            TextInput:
                id: email_kv
                multiline: False

        Button:
            text: "Submit"
            on_press: root.btn()
